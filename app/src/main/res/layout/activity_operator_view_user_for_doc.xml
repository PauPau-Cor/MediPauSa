<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".FamMenus.FamViewSingleLinkedCare">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/comfortaa"
            android:text="InformaciÃ³n del cuidador"
            android:layout_marginTop="20dp"
            android:textColor="#EB5E55"
            android:textStyle="bold"
            android:textSize="24sp"
            />

        <ImageView
            android:id="@+id/UserForDocPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Personal"
            android:textSize="14sp"
            android:textColor="#595959"
            android:fontFamily="@font/mandali"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#595959"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/mandali"
                android:text="Nombre: "
                android:textColor="#EB5E55"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/UserForDocName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/mandali"
                android:textColor="#262626"
                android:hint="Nombre"
                android:textSize="20sp" />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/UserForDocOpen"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Descargar documento"
            android:backgroundTint="#EB5E55"
            android:textColor="#262626"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#595959"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/UserForDocReject"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Rechazar documento"
            android:backgroundTint="#DDB9BE"
            android:textColor="#262626"
            android:layout_marginBottom="30dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/UserForDocAccept"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Validar documento"
            android:backgroundTint="#BDDDB9"
            android:textColor="#262626"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

</ScrollView>