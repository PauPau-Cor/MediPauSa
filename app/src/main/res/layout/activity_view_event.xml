<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:fillViewport="false"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".GeneralMenus.ViewEvent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:text="Evento"
                    android:textAlignment="center"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="#58A8A0"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Información del Evento"
                    android:textSize="14sp"
                    android:textColor="#595959"
                    android:fontFamily="@font/mandali"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#595959"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/mandali"
                        android:text="Fecha y hora del evento:"
                        android:textColor="#83BFB9"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ETAddEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mandali"
                        android:textColor="#262626"
                        android:hint="fecha y hora"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/mandali"
                        android:text="Nombre del Evento:"
                        android:textColor="#83BFB9"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ETAddEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mandali"
                        android:textColor="#262626"
                        android:hint="nombre"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/mandali"
                        android:text="Descripción del Evento:"
                        android:textColor="#83BFB9"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ETAddEventDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mandali"
                        android:textColor="#262626"
                        android:layout_marginTop="10dp"
                        android:hint="Descripcion"
                        android:textSize="18sp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/EditEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Editar evento"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>