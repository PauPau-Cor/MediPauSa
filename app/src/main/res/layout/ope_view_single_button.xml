<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#ECEFF6">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/OpeButAddy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mandali"
            android:layout_gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#262626"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/OpeButTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="#83BFB9"
            android:fontFamily="@font/mandali"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@id/OpeButAddy"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/CallButton"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_call"
            android:background="@drawable/chat_background_input"
            android:backgroundTint="#9B6DC7"
            app:tint="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/OpeButTime"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/DirectionsButton"
            android:layout_marginStart="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_outline_directions_24"
            android:background="@drawable/chat_background_input"
            android:backgroundTint="#9B6DC7"
            app:tint="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/OpeButTime"
            app:layout_constraintStart_toEndOf="@id/CallButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/OpeButDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descartar"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/OpeButTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>