<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".GeneralMenus.ForgotPass">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/comfortaa"
            android:text="Restablecer contraseña"
            android:textAlignment="center"
            android:textColor="#262626"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ForgtPasMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mandali"
            android:layout_gravity="center_horizontal"
            android:hint="Correo"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:inputType="text"
            />
        <Button
            android:id="@+id/BTFrgtPasSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#AEC17D"
            android:textColor="#595959"
            android:text="Mandar codigo"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/mandali"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Una vez reciba el codigo en su correo, introduzcalo aquí"
            />

        <EditText
            android:id="@+id/ForgtPasCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mandali"
            android:layout_gravity="center_horizontal"
            android:hint="Codigo"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:inputType="number"
            android:maxLength="6"
            />
        <Button
            android:id="@+id/BTFrgtPasCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#AEC17D"
            android:textColor="#595959"
            android:text="Ingresar codigo"
            android:layout_gravity="center_horizontal"
            />
</LinearLayout>
</ScrollView>