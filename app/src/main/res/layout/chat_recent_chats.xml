<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/RecentChatsPfp"
        android:layout_marginTop="10dp"
        android:background="@color/quantum_grey" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/RecentChatsPfp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"
        android:background="@drawable/chat_background_input"
        android:backgroundTint="@color/quantum_grey300"/>
    <View
        android:id="@+id/ViewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/RecentChatsPfp"
        app:layout_constraintStart_toEndOf="@id/RecentChatsPfp"
        app:layout_constraintBottom_toBottomOf="@id/RecentChatsPfp"/>
    <TextView
        android:id="@+id/RecentChatsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/ViewSupporter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/RecentChatsPfp"/>
    <TextView
        android:id="@+id/RecentChatsMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/quantum_grey800"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/RecentChatsPfp"
        app:layout_constraintTop_toBottomOf="@id/ViewSupporter"/>
</androidx.constraintlayout.widget.ConstraintLayout>