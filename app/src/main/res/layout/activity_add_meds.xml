<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:fillViewport="false"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".GeneralMenus.AddMeds">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Medicamento"
                    android:textAlignment="center"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="#468680"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Información General"
                    android:textSize="14sp"
                    android:textColor="#595959"
                    android:fontFamily="@font/mandali"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#595959"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ETAddMedsName"
                    style="@style/outlinedTextInputLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Nombre del medicamento"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#262626">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mandali"
                        android:textColor="#262626">
                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/ETAddMedsQuantity"
                    style="@style/outlinedTextInputLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Cantidad total del medicamento"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#262626">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:fontFamily="@font/mandali"
                        android:textColor="#262626">
                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ETAddMedsDosage"
                    style="@style/outlinedTextInputLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Dosis del medicamento"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#262626">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mandali"
                        android:inputType="number"
                        android:textColor="#262626">
                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Fechas"
                    android:textSize="14sp"
                    android:textColor="#595959"
                    android:fontFamily="@font/mandali"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#595959"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/mandali"
                    android:text="Fecha de Expiración"
                    android:textColor="#83BFB9"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ETAddMedsExpir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="130dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/mandali"
                    android:inputType="date"
                    android:textColor="#262626"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24_2"
                    android:drawablePadding="20dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/mandali"
                    android:text="Fecha de Termino"
                    android:textColor="#83BFB9"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/ETAddMedsTermination"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/mandali"
                    android:inputType="date"
                    android:textColor="#262626"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24_2"
                    android:drawablePadding="20dp"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Frecuencia con la que se debe tomar el medicamento"
                    android:textSize="14sp"
                    android:textColor="#595959"
                    android:fontFamily="@font/mandali"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#595959"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <LinearLayout
                    android:id="@+id/LayoutFreqList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:gravity="center">
                </LinearLayout>

                <Button
                    android:id="@+id/BTAddMedsAddFreq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#AEC17D"
                    android:textColor="#595959"
                    android:text="añadir hora" />

                <Button
                    android:id="@+id/BTAddMeds"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#C8D5A7"
                    android:textColor="#565656"
                    android:text="Guardar" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true">
        <ProgressBar
            android:id="@+id/RegPacPB"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>