<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/quantum_cyan"
    tools:context=".GeneralMenus.ChatActivity">
    <View
        android:id="@+id/ChatViewBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/chat_background_content_top"
        app:layout_constraintBottom_toTopOf="@id/ChatlayoutSend"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/quantum_cyan"
        app:layout_constraintBottom_toTopOf="@id/ViewSupporter"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ChatImageBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/quantum_grey600"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ChatImageDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:padding="4dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/quantum_grey600"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ChatImageReport"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="12dp"
        android:padding="4dp"
        android:src="@drawable/ic_outline_report"
        app:layout_constraintEnd_toStartOf="@id/ChatImageDelete"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/quantum_grey600"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ChatImageProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="12dp"
        android:padding="4dp"
        android:src="@drawable/ic_outline_person"
        app:layout_constraintEnd_toStartOf="@id/ChatImageReport"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/quantum_grey600"
        />

    <TextView
        android:id="@+id/ChatTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/quantum_grey600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ChatImageBack"
        app:layout_constraintEnd_toStartOf="@id/ChatImageProfile"
        app:layout_constraintStart_toEndOf="@id/ChatImageBack"
        app:layout_constraintTop_toTopOf="@id/ChatImageBack"/>
    <View
        android:id="@+id/ViewSupporter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_cyan"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ChatImageBack"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ChatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:stackFromEnd="true"
        android:overScrollMode="never"
        android:padding="20dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/ChatViewBackground"
        app:layout_constraintTop_toBottomOf="@id/ViewSupporter"/>
    <ProgressBar
        android:id="@+id/ChatProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/ChatViewBackground"
        app:layout_constraintEnd_toEndOf="@id/ChatViewBackground"
        app:layout_constraintStart_toStartOf="@id/ChatViewBackground"
        app:layout_constraintTop_toTopOf="@id/ChatViewBackground" />


    <FrameLayout
        android:id="@+id/ChatlayoutSend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/chat_background_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:padding="8dp"
            android:src="@drawable/ic_send"
            android:tint="@color/white"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/ChatlayoutAttach"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/chat_background_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ChatlayoutSend">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@drawable/ic_round_attach"
            android:tint="@color/white"/>
    </FrameLayout>

    <EditText
        android:id="@+id/ChatInputMessage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/chat_background_input"
        android:hint="Type a message"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/quantum_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ChatlayoutAttach"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>