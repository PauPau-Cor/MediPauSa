<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".FamMenus.FamViewCareAds">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/FamViewCareAdsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="107dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="107dp"
            android:fontFamily="@font/comfortaa"
            android:text="Cuidadores disponibles"
            android:textColor="#262626"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/FilterTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:textSize="16sp"
            android:textColor="#262626"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/FamViewCareAdsTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Filtro seleccionado: "/>
        <TextView
            android:visibility="gone"
            android:id="@+id/FilterIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:textSize="16sp"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/FamViewCareAdsTitle"
            app:layout_constraintStart_toEndOf="@id/FilterTv"
            android:text="Reseñas"/>
        <HorizontalScrollView
            android:id="@+id/scrolly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            app:layout_constraintTop_toBottomOf="@+id/FilterTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/FamViewAdsFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:visibility="gone"
                app:checkedButton="@id/FamViewAdsRatings"
                android:paddingHorizontal="0dp"
                android:paddingVertical="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_round_star_outline_24"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsRatingsQuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_round_star_outline_24"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:text="x"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsMaleBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_sex_male"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsFemaleBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_sex_female"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsNonBinaryBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_sex_transgender"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsNoExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_outline_null"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_outline_student"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_outline_medical_services_24"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsMoneyAsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_money"
                    android:text="▲"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FamViewAdsMoneyDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_money"
                    android:text="▼"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="?attr/materialButtonOutlinedStyle"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/FamViewAdsList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrolly" />
        <LinearLayout
            android:id="@+id/NoResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrolly">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="No se han encontrado resultados con los filtros seleccionados"
                android:fontFamily="@font/comfortaa"
                android:textSize="18sp"
                android:paddingHorizontal="20dp"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_person_search_24"
                app:tint="@color/quantum_grey" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true">
        <ProgressBar
            android:id="@+id/FamAdsPB"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>