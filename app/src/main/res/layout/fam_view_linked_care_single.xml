<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#ECEFF6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/FamLinkedCarePhoto"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/FamLinkedCarePhoto"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FamLinkedCareName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mandali"
                    android:text="TextView"
                    android:textColor="#262626"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FamLinkedCareAccSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mandali"
                    android:text="TextView"
                    android:textColor="#83BFB9"
                    android:textSize="16sp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BTFamLinkedCareInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="informacion"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BTFamLinkedCareChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHAT"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mandali"
                        android:layout_gravity="center_vertical"
                        android:text="Activ@: "
                        android:textColor="#83BFB9"
                        android:textSize="16sp"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/SwitchActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>