<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F2F2F2"
    tools:context=".GeneralMenus.RegTypeMenu">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pill"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:text="MediPauSa"
        android:textColor="#262626"
        android:layout_marginTop="20dp"
        android:textSize="38sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <Button
        android:onClick="clickCaretaker"
        android:layout_marginTop="50dp"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:backgroundTint="#B996B6"
        android:textColor="#262626"
        android:text="Soy Cuidador(a)"
        />

    <Button
        android:onClick="clickFamily"
        android:layout_marginTop="50dp"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:backgroundTint="#92AFCC"
        android:textColor="#262626"
        android:text="Soy Encargado(a)"
        />
</LinearLayout>