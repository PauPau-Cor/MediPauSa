<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".OperatorMenus.OperatorViewReport">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/SenderCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#ECEFF6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/SenderPhoto"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp" />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@id/SenderPhoto"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mandali"
                            android:text="Envia reporte:"
                            android:textColor="#262626"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/SenderName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mandali"
                            android:text="TextView"
                            android:textColor="#BF8883"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/FamCareAdSalary" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/SenderChat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CHAT"
                            android:backgroundTint="@color/quantum_vanillared400"
                            android:textColor="#262626"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ReceiverCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/SenderCV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#ECEFF6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/ReceiverPhoto"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp" />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@id/ReceiverPhoto"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mandali"
                            android:text="Recibe reporte:"
                            android:textColor="#262626"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ReceiverName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mandali"
                            android:text="TextView"
                            android:textColor="#BF8883"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/FamCareAdSalary" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/ReceiverChat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CHAT"
                            android:backgroundTint="@color/quantum_vanillared400"
                            android:textColor="#262626"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/PreviousReportsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="107dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="107dp"
            android:fontFamily="@font/comfortaa"
            android:text="Reportes previos"
            android:textColor="#262626"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ReceiverCV" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PreviousReportsList"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/PreviousReportsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/IgnoreReport"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ignorar reporte"
            android:textColor="#262626"
            android:backgroundTint="@color/quantum_googgreen400"
            app:layout_constraintTop_toBottomOf="@id/PreviousReportsList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BanAccount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Banear Cuenta"
            android:textColor="#262626"
            android:backgroundTint="@color/quantum_vanillared400"
            app:layout_constraintTop_toBottomOf="@id/IgnoreReport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BanDevice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Banear dispositivo"
            android:textColor="#262626"
            android:backgroundTint="@color/quantum_vanillared600"
            app:layout_constraintTop_toBottomOf="@id/BanAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>